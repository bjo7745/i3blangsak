bindsym --release F5 exec --no-startup-id j4-dmenu-desktop --dmenu="dmenu_command= networkmanager_dmenu -c -bw 3 -l 15 -i -nf '#8a8a8a' -nb '#323131' -sb '#8a8a8a' -sf '#363636' -fn 'Comic Sans MS Bold-14'"
